---
interface Props {
  color?: 'blue' | 'red';
  quote?: boolean;
  children: any;
}

const { color = 'blue', quote = false } = Astro.props;
---

<div
  class:list={[
    'mb-6 border-l-4 border-solid px-6 py-5 text-sm leading-6',
    { 'border-sky-200 bg-sky-100 text-sky-700': color === 'blue' },
    { 'border-accent bg-accent text-white': color === 'red' },
    { 'is-quote bg-[18px_25px] bg-no-repeat pl-16': quote },
  ]}
>
  <div
    class:list={[
      { 'border-sky-200': color === 'blue' },
      { 'border-red-400': color === 'red' },
      { 'border-l border-solid pl-5': quote },
    ]}
  >
    <slot />
  </div>
</div>

<style>
  .is-quote {
    background-image: url('data:image/png;base64,');
  }
</style>
